<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#339999"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/congrats"
        android:layout_width="230dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:text="CONGRADULATIONS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/minutes"
        android:layout_width="331dp"
        android:layout_height="30dp"
        android:layout_below="@id/congrats"
        android:layout_marginStart="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="51dp"
        android:hint="You Have Earned a Medal"
        android:textColorHint="@color/white"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        />
    <LinearLayout
        android:id="@+id/covers"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/minutes"
        android:layout_centerHorizontal="true"
        android:background="#55000000" >

    <ImageView
        android:id="@+id/imgBronze"
        android:layout_width="261dp"
        android:layout_height="232dp"
        android:layout_margin="20dp"
        android:visibility="visible"
        app:srcCompat="drawable-v24/bronzewon.png" />

    <ImageView
        android:id="@+id/imgSilver"
        android:layout_width="261dp"
        android:layout_height="232dp"
        android:layout_margin="20dp"
        android:visibility="visible"
        app:srcCompat="drawable-v24/silverwon.png" />

    <ImageView
        android:id="@+id/imgGold"
        android:layout_width="261dp"
        android:layout_height="232dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        app:srcCompat="drawable-v24/goldwon.png" />

</LinearLayout>

    <TextView
        android:id="@+id/hours"
        android:layout_width="298dp"
        android:layout_height="55dp"
        android:layout_marginStart="103dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="103dp"
        android:layout_marginBottom="8dp"
        android:hint="Results come here"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_below="@+id/covers"
        tools:ignore="MissingConstraints"
        />

    <ImageButton
        android:id="@+id/backArrow"
        android:layout_width="54dp"
        android:layout_height="48dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="210dp"
        android:background="#339999"
        android:tint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?attr/actionModeCloseDrawable"
        tools:ignore="UseAppTint,SpeakableTextPresentCheck"
        />
    <TextView
        android:id="@+id/exit"
        android:layout_width="38dp"
        android:layout_height="21dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="49dp"
        android:text="Exit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        />
    </RelativeLayout>

