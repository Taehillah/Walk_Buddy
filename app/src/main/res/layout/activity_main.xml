<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#339999"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_below="@id/details"
        android:hint="hours"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#30ffffff"
        android:inputType="time"
         />


    <EditText
        android:id="@+id/minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hours"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="minutes"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="#30ffffff"
        android:inputType="time"/>

    <TextView
        android:id="@+id/heading"
        android:layout_width="205dp"
        android:layout_height="62dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="S43385508 Marathon-App"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="314dp"
        android:layout_height="62dp"
        android:layout_below="@id/runningMan"
        android:layout_centerHorizontal="true"
        android:text="A marathon app that allows you to insert your time for scores. Enter the time you ran below then Press Submit"
        android:textAlignment="center"
        android:textColor="@color/white"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/minutes"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#003333"
        android:text="Submit"
        android:textColor="#ffffff" />

    <ImageView
        android:id="@+id/runningMan"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_below="@id/heading"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:cropToPadding="true"
        android:padding="20dp"
        android:paddingVertical="20dp"
        app:srcCompat="@drawable/running" />


</RelativeLayout>