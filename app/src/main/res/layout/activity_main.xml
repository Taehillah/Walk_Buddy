<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#339999"
    android:gravity="center"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/hours"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/details"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#30ffffff"
        android:drawableLeft="@drawable/ic_baseline_hourglass_bottom_24"
        android:drawablePadding="20dp"
        android:hint="hours"
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/minutes"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/hours"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:background="#30ffffff"
        android:hint="minutes"
        android:drawableLeft="@drawable/ic_baseline_access_time_24"
        android:drawablePadding="20dp"
        android:inputType="time"
        android:padding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="205dp"
        android:layout_height="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="S43385508 Marathon-App"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="314dp"
        android:layout_height="62dp"
        android:layout_below="@id/runningMan"
        android:layout_centerHorizontal="true"
        android:text="A marathon app that allows you to insert your time for scores. Enter the time you ran below then Press Submit"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/runningMan"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_below="@id/heading"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:cropToPadding="true"
        android:padding="20dp"
        android:paddingVertical="20dp"
        app:srcCompat="@drawable/running" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/minutes"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#48BF91"
        android:text="Submit"
        android:textColor="#ffffff" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="45dp"
        android:text="Dark Mode" />
</RelativeLayout>